{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Code Context Builder",
  "version": "1.0.0",
  "identifier": "com.jatoran.codecontextbuilder",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Code Context Builder",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "center": false,
        "dragDropEnabled": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "jatoran",
    "homepage": "https://github.com/jatoran/code_context_builder",
    "longDescription": "A powerful, keyboard-driven desktop application for creating high-quality, LLM-optimized prompts from your codebase.",
    "shortDescription": "Create LLM-optimized prompts from your codebase"
  }
}