{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "code-context-builder",
  "version": "0.1.0",
  "identifier": "ccb",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Code Context Builder",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "center": false,
        "dragDropEnabled": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [
      "icons/ccb-icon.ico"
    ]
  }
}